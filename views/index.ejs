<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="text-white">
    <div class="w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-800 " name="title" type="text" placeholder="Title goes here">
                <textarea class="block px-5 w-full rounded-md outline-none py-2 mt-2 bg-zinc-800 resize-none" name="details" placeholder="Write your task details here"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="task p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72  px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="w-full flex justify-between mt-3">
                            <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read More.</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else{ %>
                <h3 class="text-zinc-600">No Tasks yet</h3>
            <% } %>
            
        </div>
    </div>
</body>
</html>